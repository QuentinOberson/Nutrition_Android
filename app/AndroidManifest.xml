<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nutrition_guardian"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="3" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nutrition_guardian.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.login_register.RegisterActivity" >
        </activity>
        <activity android:name="com.user.MainPageUser" >
        </activity>
        <activity
            android:name="com.login_register.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.nutrition_guardian.EnterPlates"
            android:label="@string/title_activity_enter_plates" >
        </activity>
        <activity
            android:name="com.user.UserProfil"
            android:label="@string/title_activity_user_profil" >
        </activity>
        <activity
            android:name="com.nutrition_guardian.Statistics"
            android:label="@string/title_activity_statistics" >
        </activity>
    </application>

</manifest>